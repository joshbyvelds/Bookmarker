<div class="modal fade" id="modalBookmarkForm" tabindex="-1" role="dialog" aria-labelledby="bookmarkModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Create New Bookmark</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <form id="new_bookmark_image">
                        <div class="dz-message needsclick">
                            Drop files here or click to upload.
                        </div>
                    </form>
                </div>
            </div>

            <form id="new_bookmark_form">
                <div class="alert alert-danger" id="new_bookmark_general_error">
                    <strong>Info!</strong> Indicates a neutral informative change or action.
                </div>

                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <i class="fa fa-signature prefix grey-text"></i>
                        <input type="text" name="title" id="bookmark_form_title" class="form-control validate" required>
                        <label data-error="wrong" data-success="right" for="bookmark_form_title">Title</label>
                        <div class="alert alert-danger" id="new_bookmark_title_error">
                            <strong>Info!</strong> Indicates a neutral informative change or action.
                        </div>
                    </div>

                    <div class="form-group md-form">
                        <i class="fa fa-user-secret prefix grey-text" style="top: -32px;"></i>
                        <select class="form-control" name="bookmark_type" id="new_bookmark_type" style="position: relative; width: calc(100% - 50px); margin-left: 50px;">
                            <option value="1">Public</option>
                            {% if loggedin %}
                                <option value="2">Private</option>
                                <option value="3">Passcode Protected</option>
                            {% endif %}
                        </select>
                        <label for="bookmark_type" style="position: absolute; top: -1.5rem; font-size: .8rem;">Privacy</label>
                    </div>

                    <div class="md-form mb-5">
                        <i class="fas fa-link prefix grey-text"></i>
                        <input type="url" name="url" id="bookmark_form_title" class="form-control validate" required>
                        <label data-error="wrong" data-success="right" for="bookmark_form_title">URL</label>
                        <div class="alert alert-danger" id="new_bookmark_url_error">
                            <strong>Info!</strong> Indicates a neutral informative change or action.
                        </div>
                    </div>
                </div>

                <input type="hidden" name="type" value="new">

                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-default" type>Create Bookmark</button>
                </div>
            </form>
        </div>
    </div>
</div>